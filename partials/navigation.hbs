{{#if isSecondary}}
<!-- secondary navigation -->
<ul class="nav-list u-plain-list">
    {{#foreach navigation}}
    <li class="menu-item menu-item-{{slug}}{{#if current}} menu-item-current{{/if}}"">
        <a class=" menu-item-link" href="{{url}}">
        <svg width="35" height="35" role="img" aria-label="{{slug}} icon">
            <use xlink:href="#{{slug}}"></use>
        </svg>
        </a>
    </li>
    {{/foreach}}
</ul>
{{else}}
<ul class="nav-list u-plain-list">
    {{#foreach navigation}}
    <li class="menu-item menu-item-{{slug}}{{#if current}} menu-item-current{{/if}}">
        <a class="menu-item-link" href="{{url absolute=" true"}}">{{label}}
        </a>
    </li>
    {{/foreach}}
</ul>
{{/if}}